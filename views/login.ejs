<!DOCTYPE HTML>
<html>

<head>
    <% include ./partials/header.ejs %>
        <link rel="stylesheet" href="./assets/css/login.css" />
</head>

<body class="subpage">
    <div id="page-wrapper">

        <!-- Header -->
        <div id="header-wrapper">
            <header id="header" class="container">
                <div class="row">
                    <div class="12u">

                        <% include ./partials/nav.ejs %>

                    </div>
                </div>
            </header>
        </div>

        <!-- Content -->
        <div id="content-wrapper">
            <div id="content">
                <div class="container">
                    <h4>Login</h4>
                    <div class="row">
                        <div class="12u">

                            <!-- Main Content -->
                            <section id="login">
                                <div class="content">
                                    <form action="/login" method="POST">
                                        <div class="row">
                                            <div class="6u 12u(mobile)">
                                                <input type="text" class="12u form-input" name="email" placeholder="Email" required />
                                            </div>
                                            <div class="6u 12u(mobile)">
                                                <input type="password" class="12u form-input" name="password" placeholder="Password" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="12u">
                                                <ul class="">
                                                    <li>
                                                        <input type="submit" class="button" id="submit" value="Login" />
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <header>
                                    <h2>Don't have an account?
                                        <a href="/signup">Create one!</a>
                                    </h2>
                                </header>
                            </section>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% include ./partials/footer.ejs %>

    </div>

    <% include ./partials/js.ejs %>

</body>

</html>